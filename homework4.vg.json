{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple pie chart with embedded data.",
  "width": "container",
  "height": 400,
  "title": {"text":"The most important skills for different data science jobs (Top 5 in-demand Jobs)","fontSize":25,"anchor": "start"},
  "data": {
    "url": "top5Skills.csv"
  },
  "params": [
    {
      "name": "job_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Data Scientist",
          "Data Analyst",
          "Data Engineer",
          "Machine Learning Engineer",
          "Data Specialist"
        ],
        "labels": [
          "Show All",
          "Data Scientist",
          "Data Analyst",
          "Data Engineer",
          "Machine Learning Engineer",
          "Data Specialist"
        ],
        "name": "Job Title Selection: "
      }
    }
  ],
 "transform": [
    {
        "aggregate": [{
         "op": "sum",
         "field": "required",
         "as": "countVal"
        }],
        "groupby": ["JobTitle","skill"]
    },
    {
      "filter": "job_selection == null || datum.JobTitle == job_selection"
    },
    {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{ "field": "countVal", "order": "descending" }]
      }
  ],

  "mark": "bar",
  "encoding": {
    "y": {"field": "countVal", "type": "quantitative", "title":"Count"},
    "x": {"field": "skill", "type": "nominal", "title":"Skill", "sort": {"op": "sum", "field": "rank","order":"ascending"}
    },
    "color":{"field":"JobTitle",
    "title":"Job Title",
    "type": "nominal",
    "scale": {
    "domain": [
    "Data Analyst",
    "Data Engineer",
    "Data Scientist",
    "Data Specialist",
    "Machine Learning Engineer"
      ],
    "range": [
    "#e41a1c",
    "#984ea3",
    "#ff7f00",
    "#a6cee3",
    "#1518cf"
      ]
    }
  },
    "tooltip": [
      {"field": "JobTitle", "type": "nominal", "title": "Job Title"},
      {"field": "skill", "type": "nominal", "title": "Skill"},
      {"field": "countVal", "type": "quantitative", "title":"Count"}
    ]
  }
}
