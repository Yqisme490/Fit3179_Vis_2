{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A population pyramid for the US in 2000.",
  "data": { "url": "companyTypeRating.csv"},
  "title": {"text":"Private vs Public Company Comparisons","fontSize":20,"anchor": "start"},
  "transform": [
    {"calculate": "toNumber(datum.value)", "as": "value"}
  ],
  "spacing": 0,
  "hconcat": [{
    "transform": [{
      "filter": {"field": "key", "equal": "Company - Private"}
    }],
    "title": "Private",
    "width": 210,
    "height": 400,
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "category", "axis": null
      },
      "x": {
     "aggregate": "sum", "field": "value",
      "title": "Rating",
      "axis": {"format": "s"},
      "sort": "descending", 
      "scale": {"domain": [0, 5]}
      },
      "color": {
        "field": "key",
        "scale": {"range": ["#675193", "#ca8861"]},
        "legend": null
      },
        "tooltip": [
        {"field": "category", "type": "nominal", "title": "Criteria"},
        {"field": "value", "type": "quantitative", "title":"Rating"},
        {"field": "key", "type": "nominal", "title": "Company Type"}
      ]
    }
  }, {
    "height": 400,
    "view": {"stroke": null},
    "mark": {
      "type": "text",
      "align": "center"
    },
    "encoding": {
      "y": {"field": "category", "type": "ordinal", "axis": null},
      "text": {"field": "category", "type": "nominal"}
    }
  }, {
    "transform": [{
      "filter": {"field": "key", "equal": "Company - Public"}
    }],
    "title": "Public",
    "mark": "bar",
    "width": 210,
    "height": 400,
    "encoding": {
      "y": {
        "field": "category", "axis": null
      },
      "x": {
      "aggregate": "sum", "field": "value",
        "title": "Rating",
        "axis": {"format": "s"}, 
      "scale": {"domain": [0, 5]}
      },
      "color": {
        "field": "key",
        "legend": null
      },      
      "tooltip": [
        {"field": "category", "type": "nominal", "title": "Criteria"},
        {"field": "value", "type": "quantitative", "title":"Rating"},
        {"field": "key", "type": "nominal", "title": "Company Type"}
      ]
    }
  }],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
